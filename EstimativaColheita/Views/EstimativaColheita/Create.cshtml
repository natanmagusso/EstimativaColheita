@model EstimativaColheita.Models.EstimativaColheitaModel

@{
    ViewData["Title"] = "Estimativas";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        <h6 card-title>Adicionar registro</h6>
    </div>
    <div class="card-body">
        <form class="row g-3" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--<div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>-->
            <div class="col-md-2">
                <label asp-for="Caixas" class="control-label"></label>
                <input asp-for="Caixas" class="form-control form-control-sm" type="number" min='0' />
                <span asp-validation-for="Caixas" class="text-danger"></span>
            </div>
            <div class="col-md-5">
                <label asp-for="IdContrato" class="control-label"></label>
                <select asp-for="IdContrato" class ="form-control" asp-items="ViewBag.IdContrato"></select>
            </div>
            <div class="col-md-5">
                <label asp-for="IdTalhao" class="control-label"></label>
                <select asp-for="IdTalhao" class ="form-control" asp-items="ViewBag.IdTalhao"></select>
            </div>   
            <div class="col-md-5">
                <label asp-for="IdEncarregado" class="control-label"></label>
                <select asp-for="IdEncarregado" class ="form-control" asp-items="ViewBag.IdEncarregado"></select>
            </div>
            <div class="col-md-7">
                <label asp-for="IdEstimativaMotivo" class="control-label"></label>
                <select asp-for="IdEstimativaMotivo" class ="form-control" asp-items="ViewBag.IdEstimativaMotivo"></select>
            </div>
            <div class="col-md-12">
                <div class="btn-group">
                    <input class="btn btn-outline-success btn-sm" type="submit" value="Salvar" />
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}