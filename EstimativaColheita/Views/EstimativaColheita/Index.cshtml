@model IEnumerable<EstimativaColheita.Models.EstimativaColheitaModel>

@{
    ViewData["Title"] = "Estimativas";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        <h6 card-title>Lista de estimativa de colheita</h6>
    </div>
    <div class="card-body">
        <a class="btn btn-outline-success btn-sm" asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Novo registro</a>
        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="EstimativaMotivo" asp-action="Index"><i class="fa fa-list" aria-hidden="true"></i>&nbsp;Motivos da estimativa</a>
        <table class="table table-sm table-hover table caption-top">
            <caption />
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataLancamento)</th>
                    <th>@Html.DisplayNameFor(model => model.Contrato.DescricaoCompleta)</th>
                    <th>@Html.DisplayNameFor(model => model.Talhao.DescricaoCompleta)</th>
                    <th>@Html.DisplayNameFor(model => model.Caixas)</th>                    
                    <th>@Html.DisplayNameFor(model => model.EstimativaMotivo.DescricaoCompleta)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DataLancamento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contrato.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Talhao.CodigoInterno)</td>
                        @if (item.Caixas < 0) {<td style="color: red">@Html.DisplayFor(modelItem => item.Caixas)</td> }
                        else { <td style="color: green">@Html.DisplayFor(modelItem => item.Caixas)</td> }                                                
                        <td>@Html.DisplayFor(modelItem => item.EstimativaMotivo.DescricaoCompleta)</td>
                        <td><a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info" aria-hidden="true"></i>&nbsp;Mais informações</a></td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <div>
            @{ var totalEstimado = 0; var totalColhido = 0; var saldoColher = 0; }

            @foreach (var item in Model.Where(g => g.IdTipoLancamento == 1).GroupBy(g => g.IdTipoLancamento)) 
            {
                foreach (var estimado in item.ToList()) 
                {
                    totalEstimado += estimado.Caixas;
                }
                saldoColher = totalEstimado;                
            }

            @foreach (var item in Model.Where(g => g.IdTipoLancamento == 2).GroupBy(g => g.IdTipoLancamento)) 
            {
                foreach (var colhido in item.ToList())
                {
                    totalColhido += colhido.Caixas;
                    saldoColher -= colhido.Caixas;
                }
            }

            <h6 card-title style="color: blue">Estimado: @totalEstimado</h6>
            <h6 card-title style="color: green">Colhido: @totalColhido</h6>
            <h6 card-title style="color: black">Saldo a colher: @saldoColher</h6>
        </div>
    </div>
</div>