@model EstimativaColheita.Models.EstimativaColheitaModel

@{
    ViewData["Title"] = "Estimativas";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        @if (Model.Id == 0) { <text><h6 card-title>Adicionar registro</h6></text> } 
        else { <text><h6 card-title>Editar registro</h6></text> }
    </div>
    <div class="card-body">
        <form asp-action="CreateOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <!--<div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="Caixas" class="control-label"></label>
                <input asp-for="Caixas" class="form-control form-control-sm" />
                <span asp-validation-for="Caixas" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="DataAlteracao" class="control-label"></label>
                <input asp-for="DataAlteracao" class="form-control" />
                <span asp-validation-for="DataAlteracao" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="IdEncarregado" class="control-label"></label>
                <select asp-for="IdEncarregado" class ="form-select form-select-sm" asp-items="ViewBag.IdEncarregado"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <select asp-for="IdContrato" class ="form-select form-select-sm" asp-items="ViewBag.IdContrato"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTalhao" class="control-label"></label>
                <select asp-for="IdTalhao" class ="form-select form-select-sm" asp-items="ViewBag.IdTalhao"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdMotivoAlteracao" class="control-label"></label>
                <select asp-for="IdMotivoAlteracao" class ="form-select form-select-sm" asp-items="ViewBag.IdMotivoAlteracao"></select>
            </div>
            <!--<div class="form-group">
                <label asp-for="IdTipoLancamento" class="control-label"></label>
                <select asp-for="IdTipoLancamento" class ="form-select form-select-sm" asp-items="ViewBag.IdTipoLancamento"></select>
            </div>-->
            <hr />
            <div class="btn-group">
                <input class="btn btn-outline-success btn-sm" type="submit" value="Salvar" />
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
    <div class="card-footer"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}