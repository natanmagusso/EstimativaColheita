@model IEnumerable<EstimativaColheita.Models.ColheitaRealizadaModel>

@{
    ViewData["Title"] = "Apontamento";
}

<div class="card">
    <div class="card-header">
        Colheitas realizadas
    </div>
    <div class="card-body">
        <a class="btn btn-outline-success btn-sm" asp-action="Create">Novo registro</a>
        <hr />
        <table class="table table-houver">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataLancamento)</th>
                    <th>@Html.DisplayNameFor(model => model.Caixas)</th>
                    <th>@Html.DisplayNameFor(model => model.Contrato)</th>
                    <th>@Html.DisplayNameFor(model => model.Talhao)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DataLancamento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Caixas)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contrato.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Talhao.DescricaoCompleta)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer"></div>
</div>