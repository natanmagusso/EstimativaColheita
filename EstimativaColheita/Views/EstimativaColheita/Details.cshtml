@model EstimativaColheita.Models.EstimativaColheitaModel

@{
    ViewData["Title"] = "Estimativas";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        <h6 card-title>Detalhamento da estimativa</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayName("Lançamento")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DataLancamento)</dd>
            
            <dt class="col-sm-2">@Html.DisplayName("Caixas")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Caixas)</dd>

            <dt class="col-sm-2">@Html.DisplayName("Turma")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Encarregado.DescricaoCompleta)</dd>

            <dt class="col-sm-2">@Html.DisplayName("Contrato")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Contrato.DescricaoCompleta)</dd>

            <dt class="col-sm-2">@Html.DisplayName("Talhão")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Talhao.CodigoInterno)</dd>

            <dt class="col-sm-2">@Html.DisplayName("Motivo")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.EstimativaMotivo.Descricao)</dd>

            <dt class="col-sm-2">@Html.DisplayName("Tipo")</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.TipoLancamento.Descricao)</dd>
        </dl>
        <div class="col-md-12">
            <div class="btn-group">
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index"><i class="fa fa-reply" aria-hidden="true"></i>&nbsp;Voltar</a>
            </div>
        </div>
    </div>
</div>