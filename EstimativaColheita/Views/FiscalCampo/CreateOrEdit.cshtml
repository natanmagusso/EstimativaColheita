@model EstimativaColheita.Models.FiscalCampoModel

@{
    ViewData["Title"] = "Coordenadores";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        @if (Model.Id == 0) { <text><h6 card-title>Adicionar registro</h6></text> } 
        else { <text><h6 card-title>Editar registro</h6></text> }
    </div>
    <div class="card-body">
        <form class="row g-3" asp-action="CreateOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>

            <div class="col-md-2">
                <label asp-for="CodigoInterno" class="control-label"></label>
                @if (Model.Id == 0) { <input asp-for="CodigoInterno" class="form-control form-control-sm" type="number" min='0' /> } 
                else { <input asp-for="CodigoInterno" class="form-control form-control-sm" type="number" min='0' readonly /> }
                <span asp-validation-for="CodigoInterno" class="text-danger"></span>
            </div>
            <div class="col-md-7">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control form-control-sm" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Apelido" class="control-label"></label>
                <input asp-for="Apelido" class="form-control form-control-sm" />
                <span asp-validation-for="Apelido" class="text-danger"></span>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-outline-primary btn-sm"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;Salvar</button>
                <a class="btn btn-outline-secondary btn-sm" asp-action="Index"><i class="fa fa-ban" aria-hidden="true"></i>&nbsp;Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


