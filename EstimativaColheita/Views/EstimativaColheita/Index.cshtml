@model IEnumerable<EstimativaColheita.Models.EstimativaColheitaModel>

@{
    ViewData["Title"] = "Estimativas";
}

<div class="card border-secondary mb-3">
    <div class="card-header">
        <h6 card-title>Lista de estimativas de colheita</h6>
    </div>
    <div class="card-body">
        <a class="btn btn-outline-success btn-sm" asp-action="CreateOrEdit">Novo registro</a>
        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="MotivoAlteracao" asp-action="Index">Motivos de alteração</a>        
        <table class="table table-sm table-hover table caption-top">
            <caption />
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataLancamento)</th>
                    <th>@Html.DisplayNameFor(model => model.Contrato.DescricaoCompleta)</th>
                    <th>@Html.DisplayNameFor(model => model.Talhao.DescricaoCompleta)</th>
                    <th>@Html.DisplayNameFor(model => model.Encarregado.DescricaoCompleta)</th> 
                    <th>@Html.DisplayNameFor(model => model.Caixas)</th>
                    <th>@Html.DisplayNameFor(model => model.TipoLancamento.DescricaoCompleta)</th>
                    <th>@Html.DisplayNameFor(model => model.MotivoAlteracao.DescricaoCompleta)</th>                    
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DataLancamento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contrato.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Talhao.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Encarregado.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.Caixas)</td>
                        <td>@Html.DisplayFor(modelItem => item.TipoLancamento.DescricaoCompleta)</td>
                        <td>@Html.DisplayFor(modelItem => item.MotivoAlteracao.DescricaoCompleta)</td>                        
                        <td><a class="btn btn-outline-primary btn-sm" asp-action="CreateOrEdit" asp-route-id="@item.Id">Editar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>